<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#68AC61">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp">


        <TableRow
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="5sp">

            <Button
                android:id="@+id/search_team_my_team_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_weight="1"
                android:background="#FFF"
                android:text="@string/search_team_my_team_button"
                android:textColor="#68AC61"
                android:textSize="15sp" />

            <Button
                android:id="@+id/add_new_team_my_team_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_weight="1"
                android:text="@string/add_new_team_my_team_button"
                android:textColor="#68AC61"
                android:textSize="15sp" />

        </TableRow>

        <TableRow>

        </TableRow>

    </TableLayout>

    <ListView
        android:id="@+id/list_view_my_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout1"
        app:layout_constraintVertical_bias="0.0" />



</android.support.constraint.ConstraintLayout>
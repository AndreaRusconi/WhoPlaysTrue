<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background">


    <android.support.design.widget.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TableRow android:layout_marginTop="80sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">

        <TextView
            android:textColor="#FFF"
            android:textSize="22dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/creator_textView"
            />

        <TextView
            android:textSize="22dp"
            android:textColor="#FFF"
            android:id="@+id/creator_textView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">

        <TextView
            android:textSize="22dp"
            android:textColor="#FFF"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/match_type"
            />

        <TextView
            android:textSize="22dp"
            android:textColor="#FFF"
            android:id="@+id/type_of_match_ads"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />

    </TableRow>
    <TableRow
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">

        <TextView
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/place_textView"
            android:textColor="#FFF"
            android:textSize="22dp" />

        <TextView
            android:textSize="22dp"
            android:textColor="#FFF"
            android:id="@+id/place_ads"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />


    </TableRow>
    <TableRow
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="@string/date_textView"

            android:textColor="#FFF"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/date_ads"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#FFF"

            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/time_textView"
            android:textColor="#FFF"
            android:textSize="22dp" />

    <TextView
        android:textSize="22dp"
        android:textColor="#FFF"
        android:id="@+id/time_ads"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />
</TableRow>
<TableRow android:layout_marginLeft="30sp"
    android:layout_marginRight="30sp">
    <TextView
        android:textSize="22dp"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/number_of_player_ads"/>

    <TextView
        android:textSize="22dp"
        android:textColor="#FFF"
        android:id="@+id/number_of_player_ads"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="match_parent"/>
</TableRow>
<TableRow
    android:layout_marginLeft="30sp"
    android:layout_marginRight="30sp">

    <Button
        android:id="@+id/add_me_ads_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"

        android:padding="5dp"
        android:text="Add Me"
        android:textColor="#008000" />

    <Button
        android:id="@+id/let_me_see_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="4"
        android:text="@string/address_textView"
        android:textColor="#008000"
        android:textStyle="italic" />

</TableRow>

    <ListView

            android:layout_marginLeft="30sp"
            android:layout_marginRight="40sp"
            android:layout_weight="1"
            android:divider="#FFF"
            android:dividerHeight="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewFindPlayer"/>



</TableLayout>
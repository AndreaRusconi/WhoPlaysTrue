<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/field2">




    <android.support.design.widget.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TableRow android:layout_marginTop="80sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">
        <TextView
            android:textColor="#FFF"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/creator_textView"
            />

        <TextView
            android:textColor="#FFF"
            android:id="@+id/creator_textView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">
        <TextView
            android:textColor="#FFF"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/match_type"
            />

        <TextView
            android:textColor="#FFF"
            android:id="@+id/type_of_match_ads"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />

    </TableRow>
    <TableRow
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">

        <TextView
            android:textColor="#FFF"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="@string/place_textView"
        />

        <TextView
            android:textColor="#FFF"
            android:id="@+id/place_ads"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/let_me_see_textView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="#FFF"
            android:textStyle="italic"
            android:text="@string/address_textView"/>

    </TableRow>
    <TableRow
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">

        <TextView
            android:textColor="#FFF"
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            android:text="@string/date_textView"
            />

        <TextView
            android:textColor="#FFF"
            android:id="@+id/date_ads"
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            />
       <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textColor="#FFF"
        android:text="@string/time_textView"
        />

    <TextView
        android:textColor="#FFF"
        android:id="@+id/time_ads"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        />
</TableRow>
<TableRow android:layout_marginLeft="30sp"
    android:layout_marginRight="30sp">
    <TextView
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/number_of_player_ads"/>

    <TextView
        android:textColor="#FFF"
        android:id="@+id/number_of_player_ads"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="match_parent"/>
</TableRow>

        <Button
            android:textColor="#008000"
            android:id="@+id/add_me_ads_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:text="Add Me"/>

        <ListView
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_weight="1"
            android:divider="#FFF"
            android:dividerHeight="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewFindPlayer"/>


</TableLayout>
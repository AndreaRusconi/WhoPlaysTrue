<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background">


    <android.support.design.widget.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TableRow android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:textColor="#FFF"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/creator_textView"
            />

        <TextView
            android:textSize="18dp"
            android:textColor="#FFF"
            android:id="@+id/creator_textView"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            />
    </TableRow>
    <TableRow
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:textSize="18dp"
            android:textColor="#FFF"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/type_of_match_home"
            />

        <TextView
            android:textSize="18dp"
            android:textColor="#FFF"
            android:id="@+id/type_of_match_ads"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />

    </TableRow>
    <TableRow
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/place_textView"
            android:textColor="#FFF"
            android:textSize="18dp" />

        <HorizontalScrollView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:textSize="18dp"
                android:textColor="#FFF"
                android:id="@+id/place_ads"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                />
        </HorizontalScrollView>



    </TableRow>
    <TableRow
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/date_textView"
            android:textColor="#FFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/date_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </TableRow>
    <TableRow
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/time_textView"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="18dp" />

        <TextView
            android:textSize="18dp"
            android:textColor="#FFF"
            android:id="@+id/time_ads"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />
    </TableRow>

<TableRow android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
    <TextView
        android:textSize="18dp"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/number_of_player_ads"/>

    <TextView
        android:textSize="18dp"
        android:textColor="#FFF"
        android:id="@+id/number_of_player_ads"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="match_parent"/>
</TableRow>


    <Button
        android:id="@+id/add_me_ads_button"
        style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:text="@string/add_me"
        android:textColor="#008000"
        />

    <Button
        android:id="@+id/let_me_see_textView"
        style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="start"
        android:text="@string/address_textView"
        android:textColor="#008000"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/player_added"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="8dp"
        android:textColor="#FFF"/>

    <ListView

            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:divider="#FFF"
            android:dividerHeight="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewFindPlayer"/>



</TableLayout>